menu "BSP I2C Setup"
    config BSP_I2C_ENABLED
        bool "Enable I2C functions"

    if BSP_I2C_ENABLED
        config I2C_PORT_NUM
            int "I2C Master Port"
            default 0
            
        config I2C_GPIO_SCL
            int "GPIO For I2C SCL"
            default 19

        config I2C_GPIO_SDA
            int "GPIO For I2C SDA"
            default 18

        config I2C_GPIO_PULLUP
            bool "Enable I2C Pullup resistor"
        
    endif
endmenu